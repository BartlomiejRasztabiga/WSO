#cloud-config
hostname: {{ vm_name }}
users:
  - name: ubuntu
    groups: sudo
    shell: /bin/bash
    sudo: ['ALL=(ALL) NOPASSWD:ALL']
    ssh_authorized_keys:
      - {{ ssh_public_key }}
    # TEMP
    plain_text_passwd: "ubuntu"
    lock_passwd: false
    passwd: "{{ 'ubuntu' | password_hash('sha512') }}"
chpasswd:
  expire: false
runcmd:
  - timeout 30s bash -c "while true; do ping -c 1 {{bridge_host_ip}} || true; sleep 1; done"


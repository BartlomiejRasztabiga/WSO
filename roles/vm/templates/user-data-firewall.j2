#cloud-config
hostname: {{ vm_name }}
ssh_authorized_keys:
  - "{{ ssh_public_key }}"

network:
  version: 2
  ethernets:
    ens3:
      dhcp4: false
      addresses:
        - {{ vm_ip }}/24
      gateway4: 192.168.100.1
      nameservers:
        addresses:
          - 8.8.8.8
          - 8.8.4.4

runcmd:
  - ufw --force enable
